@using Portfolio.Classes
<div class="card d-flex justify-content-center align-items-center flex-lg-row flex-sm-column w-75 m-auto">
    <img class="car-img-top" height="192" width="192" src=@Details.SrcImage role="img" />
    <div class="card-body">
        <h2 class="fw-bold card-title text-center">
            <a href="@Details.Link" role="link">@Details.Title</a>
        </h2>
        <p class="card-text text-center">@Details.Text</p>
    </div>
</div>
<br />

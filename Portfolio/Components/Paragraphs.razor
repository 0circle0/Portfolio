<div class="list-group-item w-75 m-auto mb-1 border p-3">
    <div class="d-flex flex-column @(CenterData ? "align-items-center" : "")">
        <h1 class="text-center">@Title</h1>
        <ul>
            @foreach (var item in Data)
            {
                <li class="list-unstyled">
                    <p>
                        @item
                    </p>
                </li>
            }
        </ul>
    </div>
</div>
